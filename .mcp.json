{
  "mcpServers": {
    "claude-flow": {
      "command": "npx",
      "args": [
        "-y",
        "@claude-flow/cli@latest",
        "mcp",
        "start"
      ],
      "env": {
        "CLAUDE_FLOW_MODE": "v3",
        "CLAUDE_FLOW_HOOKS_ENABLED": "true",
        "CLAUDE_FLOW_TOPOLOGY": "hierarchical-mesh",
        "CLAUDE_FLOW_MAX_AGENTS": "15",
        "CLAUDE_FLOW_MEMORY_BACKEND": "hybrid"
      },
      "autoStart": true
    },
    "ruv-swarm": {
      "command": "npx",
      "args": [
        "-y",
        "ruv-swarm@latest",
        "mcp",
        "start",
        "--stability"
      ],
      "autoStart": true
    },
    "ruvector": {
      "command": "npx",
      "args": [
        "-y",
        "ruvector@latest",
        "mcp",
        "start"
      ],
      "autoStart": true
    }
  }
}
